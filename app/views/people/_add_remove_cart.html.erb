<!-- NOTE: this template is managed by add.js.erb and remove.js.erb -->

<!-- event invitation scheduling handling. -->
<%
  #this should be refactored out, as this is a tight loop
  cart = current_user.current_cart
  in_cart = cart.people.include?(person)
  add_button_class = in_cart ? 'hide' : ''
  remove_button_class = in_cart ? '' : 'hide'
%>
  <!-- <%= in_cart %> -->
              <%= link_to t('.cart', default: "Add"),
                          add_person_cart_index_path(person_id: person.id),
                          class: "btn #{add_button_class}",
                          id: "#{person.id}-cart-add",
                          remote: true %>

              <%= link_to t('.cart', default: "Remove"),
                          delete_person_cart_index_path(person_id: person.id),
                          id: "#{person.id}-cart-delete",
                          class: "btn #{remove_button_class}",
                          remote: true %>
